
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Admin Giriş</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="/AdminLogin/css/style.css">

    <link rel="icon" type="image/png" href="/AdminLogin/images/favicon.ico" />
</head>
<body class="img js-fullheight" style="background-image: url(/AdminLogin/images/banner1.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">ADMİN GİRİŞ</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Boşlukları Doldurunuz...</h3>
                        @using (Html.BeginForm("AdminLogin", "Login", FormMethod.Post))
                        {
                            <div class="form-group">
                                <input type="text" class="form-control" name="UserName" placeholder="Kullanıcı Adı" required>
                            </div>
                            <div class="form-group">
                                <input id="password-field" type="password" class="form-control" name="Password" placeholder="Şifre" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Giriş Yap</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50">
                                    <label class="checkbox-wrap checkbox-primary">
                                        Beni Hatırla
                                        <input type="checkbox" checked>
                                        <span class="checkmark"></span>
                                        <br />
                                        <a href="/Blog/Index/" style="color: burlywood">FERO BLOG</a>
                                    </label>
                                    
                                </div>
                                <div class="w-50 text-md-right">
                                    <a href="#" style="color: burlywood">Şifremi Unuttum</a>
                                    <br />
                                    <a href="/Login/AuthorLogin/" style="color: burlywood">YAZAR GİRİŞİ</a>

                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="/AdminLogin/js/jquery.min.js"></script>
    <script src="/AdminLogin/js/popper.js"></script>
    <script src="/AdminLogin/js/bootstrap.min.js"></script>
    <script src="/AdminLogin/js/main.js"></script>

</body>
</html>

