@model IEnumerable<EntityLayer.Concrete.Blog>

@{ ViewBag.Title = "AdminBlogList2";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }


@{ string color = "";}
@{ string casename = "";}
@{ int puan = 1;}
<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">BLOG LİSTESİ</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                ID
                            </th>
                            <th style="width: 20%">
                                BLOG BAŞLIĞI
                            </th>
                            <th style="width: 6%">
                                YAZAR
                            </th>
                            <th style="width: 10%">
                                BEĞENİ ORANI
                            </th>
                            <th style="width: 6%" class="text-center">
                                DURUM
                            </th>
                            <th style="width: 6%" class="text-center">
                                KATEGORİ
                            </th>
                            <th style="width: 20%" class="text-center">
                                İŞLEMLER
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            puan = item.BlogRating * 10;

                            if (puan >= 85)
                            {
                                color = "post-category text-white bg-success mb-3";
                                casename = "Çok İyi";
                            }
                            if (puan >= 70 && puan <= 84)
                            {
                                color = "post-category text-white bg-info mb-3";
                                casename = "İyi";
                            }
                            if (puan >= 50 && puan <= 69)
                            {
                                color = "post-category text-white bg-warning mb-3";
                                casename = "Orta İyi";
                            }
                            if (puan >= 0 && puan <= 49)
                            {
                                color = "post-category text-white bg-danger mb-3";
                                casename = "Kötü";
                            }

                        <tr>
                            <td>@item.BlogID</td>
                            <td>@item.BlogTitle</td>
                            <td>
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        <img alt="Avatar" class="table-avatar" src="@item.Author.AuthorImage">
                                    </li>
                                </ul>
                            </td>
                            <td class="project_progress">
                                <div class="progress progress-sm">
                                    <div class="progress-bar bg-green" role="progressbar" aria-volumenow="57" aria-volumemin="0" aria-volumemax="100" style="width: @puan%">
                                    </div>
                                </div>
                                <small>
                                    PUAN: @puan
                                </small>
                            <td class="project-state">

                                <span class="badge badge @color">@casename</span>

                            </td>
                            
                            <td class="project-state">
                                <span class="badge badge-success">@item.Category.CategoryName</span>
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-primary btn-sm" href="/Blog/BlogDetails/@item.BlogID">
                                    <i class="fas fa-folder">
                                    </i>
                                    Sitede Gör
                                </a>
                                <a class="btn btn-info btn-sm" href="/Blog/UpdateBlog/@item.BlogID">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Düzenle
                                </a>
                                <a class="btn btn-danger btn-sm" href="/Blog/DeleteBlog/@item.BlogID">
                                    <i class="fas fa-trash">
                                    </i>
                                    Sil
                                </a>
                            </td>
                        </tr>
}
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>

